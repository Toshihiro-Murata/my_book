<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>表紙</th>
      <th>書名</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>出版日</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.image %>" class="img-responsive"></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price, unit: '¥', precision: 0) %></td>
        <td><%= book.publisher %></td>
        <td><%= book.release_date.strftime("%Y/%m/%d") %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to '閲覧', book, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to '編集', edit_book_path(book), class: "btn btn-info btn-xs" %></td>
        <td><%= link_to '削除', book, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい書籍の登録', new_book_path, class:"btn btn-primary btn-lg" %>
</div>
